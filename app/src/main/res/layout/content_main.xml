<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffff3f"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/main_content">

    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:background="#1e21a8"
        android:paddingBottom="32dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/insira_um_cep"
            android:id="@+id/insiraTextView"
            android:hint="@string/insira_um_cep"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:textAlignment="center"
            android:singleLine="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/cepEditText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@id/insiraTextView"
            android:background="@android:color/white"
            android:inputType="number"
            android:padding="8dp"
            android:text=""
            android:textAlignment="center"
            android:textSize="40dp"
            android:layout_marginTop="8dp"
            android:numeric="integer"
            android:hint="00000-000" />

        <Button
            android:id="@+id/btnBusca"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/cepEditText"
            android:onClick="buscar"
            android:text="@string/buscar_cep"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnBusca"
            android:textSize="18dp"
            android:text=""
            android:id="@+id/localidadeTextView"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />
<!--
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/localidadeTextView"
            android:textSize="18dp"
            android:text="Sub-regiao"
            android:id="@+id/subRegiaoTextView"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subRegiaoTextView"
            android:textSize="18dp"
            android:text="Setor"
            android:id="@+id/setorTextView"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/setorTextView"
            android:textSize="18dp"
            android:text="Subsetor"
            android:id="@+id/subsetorTextView"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/subsetorTextView"
            android:textSize="18dp"
            android:text="Divisor de Subsetor"
            android:id="@+id/divisorSubsetorTextView"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF" />
            -->

    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/resultadoScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_top"
        android:visibility="visible">

        <RelativeLayout
            android:id="@+id/layout_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="EndereÃ§o"
                android:id="@+id/enderecoTextView"
                android:layout_marginTop="32dp"
                android:textSize="24dp" />

            <EditText
                android:id="@+id/logradouroEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/enderecoTextView"
                android:text="@string/logradouro" />

            <EditText
                android:id="@+id/bairroEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/logradouroEditText"
                android:text="Bairro" />

            <EditText
                android:id="@+id/cidadeEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bairroEditText"
                android:text="Cidade" />

            <EditText
                android:id="@+id/ufEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cidadeEditText"
                android:text="UF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mapa"
                android:id="@+id/mapaTextView"
                android:layout_below="@+id/ufEditText"
                android:textSize="24dp" />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_below="@id/mapaTextView"
                android:layout_marginTop="16dp"
                tools:context=".MapsActivity" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>